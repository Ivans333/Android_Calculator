<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttondiv"
            app:layout_constraintTop_toBottomOf="@+id/buttonminus"
            app:layout_constraintStart_toStartOf="@+id/buttonminus"
            app:layout_constraintEnd_toEndOf="@+id/buttonminus" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.117"
            android:onClick="divide"/>
    <TextView
            android:text=""
            android:layout_width="325dp"
            android:layout_height="50dp" android:id="@+id/prevValue"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.071"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonplus"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            app:layout_constraintTop_toBottomOf="@+id/button0"
            android:onClick="buttonplus"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/button5"
            android:layout_marginTop="20dp" app:layout_constraintStart_toEndOf="@+id/button7"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.035"
            android:onClick="button8"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button0"
            app:layout_constraintTop_toBottomOf="@+id/button8"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.052"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:onClick="button0"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.441"
            android:onClick="button6"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            android:layout_marginTop="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="button5"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            android:layout_marginTop="88dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.108"
            android:onClick="button7"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonminus"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/buttonplus"
            app:layout_constraintTop_toBottomOf="@+id/button0"
            android:onClick="buttonminus"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button9"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/button6" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.462"
            android:onClick="button9"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/button1" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="24dp"
            android:onClick="button1"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="button2"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.441"
            android:onClick="button3"/>
    <TextView
            android:text=""
            android:layout_width="325dp"
            android:layout_height="50dp" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.145"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            app:layout_constraintEnd_toStartOf="@+id/button5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1" app:layout_constraintBottom_toTopOf="@+id/button7"
            android:layout_marginBottom="20dp" app:layout_constraintVertical_bias="0.982"
            android:onClick="button4"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/result"
            app:layout_constraintTop_toBottomOf="@+id/button0"
            android:layout_marginTop="164dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.773" app:layout_constraintVertical_bias="0.0"
            android:onClick="result"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonX"
            app:layout_constraintTop_toBottomOf="@+id/buttonplus"
            app:layout_constraintStart_toStartOf="@+id/buttonplus" app:layout_constraintEnd_toEndOf="@+id/buttonplus"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.045"
            android:onClick="multiply"/>
    <Button
            android:text="Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/restart"
            app:layout_constraintTop_toBottomOf="@+id/buttonX" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.27" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:onClick="restart"/>
</androidx.constraintlayout.widget.ConstraintLayout>